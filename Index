  <!-- Scripts -->
  <script>
    // Swiper
    const swiper = new Swiper(".mySwiper", {
      slidesPerView: 1,
      spaceBetween: 20,
      loop: true,
      navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
      breakpoints: { 768: { slidesPerView: 2 }, 1024: { slidesPerView: 3 } },
    });

    // ScrollReveal
    ScrollReveal().reveal('[data-sr]', { distance: '50px', duration: 1000, easing: 'ease-in-out', origin: 'bottom', interval: 200 });

    // GSAP Hero Animations
    gsap.from("#home h2", {y: -50, opacity: 0, duration: 1, ease: "power2.out"});
    gsap.from("#home p", {y: 20, opacity: 0, duration: 1, delay: 0.5});
    gsap.from("#home a", {scale: 0, opacity: 0, duration: 1, delay: 1, ease: "elastic.out(1, 0.5)"});

    // Floating Book
    gsap.to("#floatingBook", { y: -20, repeat: -1, yoyo: true, ease: "power1.inOut", duration: 2 });
  </script>

